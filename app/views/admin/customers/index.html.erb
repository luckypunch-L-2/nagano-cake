<div class="container">
  <div class="row my-5">
    <div class="col-sm-10 px-sm-0 offset-sm-1">
      <h2>会員一覧</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 px-sm-0 offset-sm-1">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= customer.first_name %> <%= customer.last_name %></td>
          <td><%= customer.email %></td>
          <td class="<%= customer.is_deleted ? 'text-gray' : 'text-green' %>"><%= customer.is_deleted ? '退会済み' : '有効' %></td>
        </tr>
        <% end %>
      </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>