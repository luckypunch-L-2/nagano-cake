<div class="container">
  <div class="row my-3 ml-5">
    <h4 style="background-color: #dcdcdc;">　会員一覧　</h4>
  </div>

  <div class="row">
    <div class="col-sm-10 px-sm-0 offset-sm-1">
      <table class="table">
        <thead>
          <tr bgcolor="#dcdcdc">
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <% @customers.each do |customer| %>
        <tr>
          <td><%= customer.id %></td>
          <td><%= link_to customer.first_name + customer.last_name, admin_customer_path(customer.id) %></td>
          <td><%= customer.email %></td>
          <td class="<%= customer.is_deleted ? 'text-black-50' : 'text-success' %>"><strong><%= customer.is_deleted ? '退会' : '有効' %></strong></td>
        </tr>
        <% end %>
      </table>
      <%= paginate @customers %>
    </div>
  </div>
</div>