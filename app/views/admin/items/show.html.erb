<div class="container p-5">
  <div class="row ml-3 mb-5">

    <h4 style="background-color: #dcdcdc;">　商品詳細　</h4>

  </div>

  <div class="row justify-content-center">
    <div class="col-4">
        <%= image_tag @item.image, size: "250x200" %>
    </div>

    <div class="col-7">
      <table class="table table-borderless">
        <tr>
          <td style="width: 30%">商品名</td>
          <td><%= @item.name %></td>
        </tr>

        <tr>
          <td>商品説明</td>
          <td><%= @item.explanation %></td>
        </tr>

        <tr>
          <td>ジャンル</td>
          <td><%= @item.genre.name %></td>
        </tr>

        <tr>
          <td>
            税込価格<br>
          (税抜価格)
          </td>
          <td>
            <%= @item.add_tax_price.to_s(:delimited) %>
          (<%= @item.price.to_s(:delimited) %>)　円
          </td>
        </tr>

        <tr>
          <td>販売ステータス</td>
          <td>
            <% if @item.is_active == true %>
              <div class="text-success">
                <strong>販売中</strong>
              </div>
            <% else %>
              <div class="text-danger">
                <strong>販売停止中</strong>
              </div>
            <% end %>
          </td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row my-3">
    <%= link_to "　編集する　", edit_admin_item_path(@item.id), class: "btn btn-success mx-auto" %>
  </div>
</div>