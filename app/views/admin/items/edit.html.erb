<div class="container p-5">
  <div class="row mb-5">
    <h4 class="bg-light">商品編集</h4>
  </div>
  
   <div class="container">
    <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>

      <div class="row justify-content-center mb-2">
        <label class="col-2">商品画像</label>
        <div class="col-4">
          <%= f.file_field :image, accept: "image/*" %>
        </div>
      </div>

      <div class="row justify-content-center mb-2">
        <label class="col-2">商品名</label>
        <div class="col-4">
          <%= f.text_field :name, placeholder: "商品名", size: "26" %>
        </div>
      </div>

      <div class="row justify-content-center mb-2">
        <label class="col-2">商品説明</label>
        <div class="col-4">
          <%= f.text_area :explanation, placeholder: "ここに説明を記述します", size:"30x6" %>
        </div>
      </div>

      <div class="row justify-content-center mb-2">
        <label class="col-2">ジャンル</label>
        <div class="col-4">
          選択ボックス<%= f.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"select-box", id:"mentor-skill"}) %>
        </div>
      </div>

      <div class="row justify-content-center mb-2">
        <label class="col-2">税抜価格</label>
        <div class="col-4">
          <%= f.text_field :price, placeholder: "1000", size: "26" %>
        </div>
      </div>

      <div class="row justify-content-center mb-4">
        <label class="col-2">販売ステータス</label>
        <div class="col-4">
          
          <%= f.radio_button :is_active, :true %>
          <%= f.label :is_active_true, "販売中" %>
          
          <%= f.radio_button :is_active, :false %>
          <%= f.label :is_active_false, "販売停止中" %>
        </div>
      </div>

      <div class="row mb-5">
        <%= f.submit "変更を保存", class: "btn btn-success mx-auto" %>
      </div>

    <% end %>
</div>