<div class="container p-3">
  <div class="row">

  <div class="col-md-12">
    <h4>注文履歴詳細</h4>
    <table class="text-left">
      <tr>
        <th><strong>購入者</strong></th>
        <th><%= @order.customer.last_name + @order.customer.first_name %></th>
      </tr>

      <tr>
        <th><strong>注文日</strong></th>
        <th><%= @order.customer.created_at.strftime('%Y/%m/%d') %></th>
      </tr>

      <tr>
        <th><strong>配送先</strong></th>
        <th>〒<%= @order.customer.zip_code + " " + @order.customer.address + " " + @order.customer.name %></th>
      </tr>

      <tr>
        <th><strong>支払方法</strong></th>
        <th><%= @order.customer.payment_method_i18n %></th>
      </tr>

      <tr>
        <th><strong>注文ステータス</strong></th>
        <th>
          <%= form_with model: @order, url: admin_order_path, method: :patch, local: true do |f| %>
            <%= f.select :status, Order.statuses.keys, class: "order_status" %>
            <%= f.submit "更新" , class: "btn btn-outline-success" %>
          <% end %>
        </th>
      </tr>
    </table>
  </div>

  <div class="col-md-12">
    <table class="table">
      <thead>
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th>製作ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @order_details.each do |order_detail| %>
        <tr>
          <th><%= order_detail.item.name %></th>
          <th><%= order_detail.item.price %></th>
          <th><%= order_detail.amount %></th>
          <th><%= order_detail.amount * order_detail.item.price %></th>
          <th>
            <%= form_with model: @order_detail, url: admin_order_path, method: :patch, local: true do |f| %>
              <%= f.select :making_status, OrderDetail.making_statuses.keys, class: "order_status" %>
              <%= f.submit "更新" , class: "btn btn-success" %>
            <% end %>
          </th>
        </tr>
        <% end %>
      </tbody>
    </table>

    <table class="table">
      <tr>
        <th><strong>商品合計</strong></th>
        <th><%= @order.total_payment %></th>
      </tr>

      <tr>
        <th><strong>送料</strong></th>
        <th><%= @order.postage %></th>
      </tr>

      <tr>
        <th><strong>請求金額合計</strong></th>
        <th><strong><%= @order.total_payment + @order.postage %></strong></th>
      </tr>
    </table>
  </div>

  </div>
</div>



