<div class="container">
  <div class="row mt-3">
    <h3 style="background-color: #dcdcdc;">注文履歴一覧</h3>
  </div>

  <div class="row mt-2">
    <div class="col-lg-10">
      <table class="table">
        <thead>
          <tr bgcolor="#dcdcdc">
            <th>購入日時</th>
            <th>購入者</th>
            <th>注文個数</th>
          </tr>
        </thead>
        <tbody>
          <% @order.each do |order| %>
          <tr>
            <td>
              <%= link_to admin_order_path(order.id) do %>
                <%= l order.created_at %>
              <% end %>
            </td>
            <td><%= order.customer.last_name + order.customer.first_name %></td>
            <td>
              <% order.order_details.each do |order_detail| %>
              <%= order_detail.amount %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>

      <div class="row mt-5">
        <div class="mx-auto">
          <%= paginate @orders %>
        </div>
      </div>
    </div>
  </div>
</div>
