<div class="container p-5 mb-5">
  <div class="row mb-5 ml-5">
    <h4 style="background-color: #dcdcdc;">ジャンル一覧・追加</h4>
  </div>

  <div class="row mb-4">
    <%= form_with model: @genre,url: admin_genres_path, method: :post do |f| %>
      <td><%= f.label :"ジャンル名", class: "mr-3" %></td>
      <td><%= f.text_field :name, class: "mr-5" %></td>
      <td><%= f.submit'新規登録', class: "btn btn-success" %></td>
    <% end %>
  </div>
  

  <div class="row">
    <div class="col-lg-5 mt-3">
      <table class="table">
       
        <tr bgcolor="#dcdcdc">
          <th>　　ジャンル</th>
          <th></th>
        </tr>
        
        <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>