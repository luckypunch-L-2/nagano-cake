<div class="container mt-5 mb-5">
  <div class="row">
    <div class="col">
    <h1>ジャンル一覧・追加</h1>
    </div>
  </div>

  <div class="row">
    <div class="col">
    <%= form_with model: @genre,url: admin_genres_path, method: :post do |f| %>
      <td><%= f.label :"ジャンル名", class: "mr-3" %></td>
      <td><%= f.text_field :name, class: "mr-5" %></td>
      <td><%= f.submit'新規登録', class: "btn btn-primary" %></td>
    <% end %>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-5 mt-3">
      <table class="table table-bordered">
        <thead>
          <tr>
            <th>ジャンル</th>
          </tr>
        </thead>
        <tbody>
          <% @genres.each do |genre| %>
          <tr>
            <td><%= genre.name %></td>
            <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: "btn btn-sm btn-success" %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>