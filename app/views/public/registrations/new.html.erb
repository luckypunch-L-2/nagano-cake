<div class="container p-5">
  <div class="row mb-5 ml-5">
    <h4 style="background-color: #dcdcdc;">新規会員登録</h4>
  </div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<div class="col-10">
  <table class="table">
 

    
    <tr>
      <td>名前</td>
      <td class="field">
        <%= f.label :first_name, "(姓)" %> <%= f.text_field :first_name , placeholder: "令和"%>
        　　<%= f.label :last_name, "(名)" %> <%= f.text_field :last_name, placeholder: "道子" %>
      </td>
    </tr>

    <tr>
      <td>フリガナ</td>
      <td class="field">
        <%= f.label :first_name_kana, "(セイ)" %> <%= f.text_field :first_name_kana, placeholder: "レイワ" %>
        　　<%= f.label :last_name_kana, "(メイ)" %> <%= f.text_field :last_name_kana, placeholder: "ミチコ" %>
      </td>
    </tr>

    <tr>
      <td>
         メールアドレス
      </td>
      <td class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
      </td>
    </tr>

    <tr>
      <td>
         郵便番号(ハイフンなし)
      </td>
      <td class="field">
        <%= f.text_field :zip_code, placeholder: "1238765" %>
      </td>
    </tr>

    <tr>
      <td>
         住所
      </td>
      <td class="field">
        <%= f.text_field :address, placeholder: "東京都渋谷区代々木0-0" %>
      </td>
    </tr>

    <tr>
      <td>
         電話番号(ハイフンなし)
      </td>
      <td class="field">
        <%= f.text_field :telephone_number, placeholder: "00011112222" %>
      </td>
    </tr>

    <tr>
      <td>
        パスワード(6文字以上)
      </td>
      <td class="field">
        <% if @minimum_password_length %>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </td>
    </tr>

    <tr>
      <td>
       パスワード(確認用）
      </td>
      <td class="field">
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </td>
    </tr>

    <tr>
      <td></td>
      <td class="actions">
        <%= f.submit "　　新規登録　　", class: "btn btn-success" %>
      </td>
    </tr>
  </table>
</div>
<% end %>


  <%= render "public/shared/links" %>
