<div class="container">
  <div class="row">
    <% @items.each do |item| %>
      <div class="col-3 mb-2">
        <%= link_to item_path(item.id) do %>
          <%= image_tag item.image, size: "160x120" %><br>
        <% end %>
        <strong><%= item.name %></strong><br>
        <strong><%= item.add_tax_price.to_s(:delimited) %></strong>
      </div>
    <% end %>
  </div>
</div>