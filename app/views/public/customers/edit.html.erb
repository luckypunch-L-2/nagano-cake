<div class="container p-5">
  <div class="row mb-5 ml-5">
    <h4 style="background-color: #dcdcdc;">会員情報編集</h4>
  </div>

  <div class="row">
    <table class="table">
      <%= form_with model: @customer, url: customers_information_path, method: :patch do |f| %>
        <tr>
          <td>氏名</td>
          <td>
            <%= f.text_field :last_name %>
            　　<%= f.text_field :first_name %>
          </td>
        </tr>

        <tr>
          <td>フリガナ</td>
          <td>
            <%= f.text_field :last_name_kana %>
            　　<%= f.text_field :first_name_kana %>
          </td>
        </tr>

        <tr>
          <td>郵便番号</td>
          <td><%= f.text_field :zip_code %></td>
        </tr>

        <tr>
          <td>住所</td>
          <td><%= f.text_field :address %></td>
        </tr>

        <tr>
          <td>電話番号</td>
          <td><%= f.text_field :telephone_number %></td>
        </tr>

        <tr>
          <td>メールアドレス</td>
          <td><%= f.text_field :email %></td>
        </tr>

        <tr>
          <td></td>
          <td>
            <%= f.submit "　　編集内容を保存　　", class: "btn btn-success" %>
           　　　　　　 <%= link_to "　退会する　", customers_confirm_path, class: "btn btn-danger ml-5" %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>