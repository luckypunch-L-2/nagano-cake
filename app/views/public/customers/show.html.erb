<div class="container">
  <div class="row">
    <div class="col">
      <h3 class="my_page">マイページ</h3>
        <div>
        <h3>登録情報</h3><%= link_to "編集する", customers_information_edit_path %>
        </div>


        <table class="table">
          <tr>
            <td class="name">氏名</td>
            <td><%= @customer.last_name %></td>
            <td><%= @customer.first_name %></td>
          </tr>

          <tr>
            <td class="kana">カナ</td>
            <td><%= @customer.last_name_kana %></td>
            <td><%= @customer.first_name_kana %></td>
          </tr>

          <tr>
            <td class="yu-bin">郵便番号</td>
            <td><%= @customer.zip_code %></td>
          </tr>

          <tr>
            <td class="address">住所</td>
            <td><%= @customer.address %></td>
          </tr>

          <tr>
            <td class="telephone">電話番号</td>
            <td><%= @customer.telephone_number %></td>
          </tr>

          <tr>
            <td class="email">メールアドレス</td>
            <td><%= @customer.email %></td>
          </tr>
        </table>

          <div class="haisousaki">
            <h3>配送先</h3>
            <%= link_to "一覧を見る", addresses_path %>
          </div>
          <div class="items">
            <h3>注文履歴</h3>
            <%= link_to "一覧を見る", orders_path %>
          </div>
    </div>
  </div>
</div>