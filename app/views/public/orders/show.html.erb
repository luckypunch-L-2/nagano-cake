<div class="container p-3">

  <div class="row mt-3">
    <h3 style="background-color: #dcdcdc;">注文履歴詳細</h3>
  </div>

  <div class="row mt-3">
    <div class="col-lg-7">
      <h6><strong>注文情報</strong></h6>
      <table class="col-12" style="font-size: 13pt" border="1" bordercolor="#000000">
        <tbody>
          <tr>
            <td bgcolor="#dcdcdc" style="width: 20%">注文日</td>
            <td style="width: 80%"><%= @order.created_at.strftime('%Y/%m/%d') %></td>
          </tr>

          <tr>
            <td bgcolor="#dcdcdc" style="width: 20%">配送先</td>
            <td style="width: 80%">〒<%= @order.zip_code + " " + @order.address + " " + @order.name %></td>
          </tr>

          <tr>
            <td bgcolor="#dcdcdc" style="width: 20%">支払方法</td>
            <td style="width: 80%"><%= @order.payment_method_i18n %></td>
          </tr>

          <tr>
            <td bgcolor="#dcdcdc" style="width: 20%">ステータス</td>
            <td style="width: 80%"><%= @order.status_i18n %></td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-lg-5">
      <h6><strong>請求情報</strong></h6>
      <table class="col-12" style="font-size: 13pt" border="1" bordercolor="#000000">
        <tbody>
          <tr>
            <td bgcolor="#dcdcdc">商品合計</td>
            <td><%= @order.total_payment - @order.postage %></td>
          </tr>

          <tr>
            <td bgcolor="#dcdcdc">配送料</td>
            <td><%= @order.postage %></td>
          </tr>

          <tr>
            <td bgcolor="#dcdcdc"><strong>ご請求額</strong></td>
            <td><%= @order.total_payment %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-lg-9">
    <h6><strong>注文内容</strong></h6>
    <table class="col-12" style="font-size: 13pt" border="1" bordercolor="#000000">
      <thead>
        <tr bgcolor="#dcdcdc">
          <th style="width: 60%">商品</th>
          <th style="width: 20%">単価(税込)</th>
          <th style="width: 10%">個数</th>
          <th style="width: 10%">小計</th>
        </tr>
      </thead>

      <tbody>
      <% @order_details.each do |order_detail| %>
        <tr>
          <td style="width: 60%"><%= order_detail.item.name %></td>
          <td style="width: 20%"><%= order_detail.item.add_tax_price %></td>
          <td style="width: 10%"><%= order_detail.amount %></td>
          <td style="width: 10%"><%= order_detail.amount * order_detail.item.add_tax_price %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
</div>
