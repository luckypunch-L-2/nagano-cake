<div class="container p-3">
  <div class="row">
    <h3>注文情報確認</h3>
      <table class="table">
        <thead>
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
        <% @cart_items.each do |cart_item| %>
          <tr>
            <td><strong><%= cart_item.item.name %></strong></td>
            <td><%= cart_item.item.price %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.item.price*cart_item.amount %></td>
          </tr>
        <% end %>
        </tbody>
      </table>
      
      <table class="table">
        <tbody>
          <tr>
            <td>送料</td>
            <td><%= @postage %></td>
          </tr>
          <tr>
            <td>商品合計</td>
            <td><%= @cart_items_price %></td>
          </tr>
          <tr>
            <td>請求金額</td>
            <td><%= @total_price %></td>
          </tr>
        </tbody>
      </table>
      
       <h4>支払い方法</h4>
        <% if @selected_payment_method == "credit_card" %>
          クレジットカード
        <% else %>
          銀行振込
        <% end %>
  </div>
</div>