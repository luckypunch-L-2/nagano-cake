<div class="container p-3">

  <div class="row mt-3">
    <h3 style="background-color: #dcdcdc;">注文履歴一覧</h3>
  </div>

  <div class="row mt-3">
    <div class="col-lg-12">
      <table class="col-12" style="font-size: 13pt" border="1" bordercolor="#000000">
        <thead>
          <tr bgcolor="#dcdcdc">
            <th style="width: 15%">注文日</th>
            <th style="width: 35%">配送先</th>
            <th style="width: 15%">注文商品</th>
            <th style="width: 9%">支払金額</th>
            <th style="width: 12%">ステータス</th>
            <th style="width: 14%">注文詳細</th>
          </tr>
        </thead>
        <tbody>
          <% @orders.each do |order| %>
          <tr>

            <td><%= l order.created_at, format: :short %></td>

            <td><%= order.address %></td>
            <td>
              <ul class="list-unstyled">
                <% order.order_details.each do |order_detail|  %>
                  <li><%= order_detail.item.name %></li>
                <% end %>
              </ul>
            </td>
            <td><%= order.total_payment %>円</td>
            <td><%= order.status_i18n %></td>
            <td>
              <div class="col text-center">
                <%= link_to "表示する", order_path(order.id), class: "btn btn-primary" %>
              </div>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
