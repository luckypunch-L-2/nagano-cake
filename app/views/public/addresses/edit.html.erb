<div class="container mt-5 mt-5">
  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto">
      <h2>配送先編集</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-10 px-sm-0 mx-auto">
      <%= form_with model:@address, local:true do |f| %>
      <table>
        <tr>
          <div class="form-group">
            <th><%= f.label :"郵便番号（ハイフンなし）" %></th>
            <th><%= f.text_field :address %></th>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :"住所" %></th>
            <th><%= f.text_field :zip_code %></th>
          </div>
        </tr>
        <tr>
          <div class="form-group">
            <th><%= f.label :"宛名" %></th>
            <th><%= f.text_field :name %></th>
            <th><%= f.submit "編集内容を保存" %></th>
          </div>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>